import { LineEdit } from "std-widgets.slint";
export component ItemContainer inherits Rectangle {

    // Size of scroll view container.
    width: 410px;

    in-out property <string> item_name <=> iname.text;
    in-out property <string> item_cost <=> icost.text;


    // // Present only for testing purposes. Please remove later.
    // Rectangle {
    //     background: red;
    //     width: 410px;
    //     height: 20px;
    // }

    // Both properties are kept 200px in size, to divide them equally.
    iname := LineEdit {
        x: 0;
        width: 200px;
        horizontal-alignment: center;
        read-only: true;
    }

    // Even if we set the input-type as 'number', it will still be accepting 'string'
    icost := LineEdit {
        // icost begins from 220px so as to fit the rest of 200 inside.
        x: 210px;
        width: 200px;
        horizontal-alignment: center;
        read-only: true;
    }
}